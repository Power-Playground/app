{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@power-playground/core": ["./core/src"],
      "@power-playground/core/common-plugins": ["./core/src/common-plugins.ts"],
      "@power-playground/core/components/*": ["./core/src/components/*"],
      "//chii/*": ["./external/chrome-devtools/front_end/*"],
    }
  },
  "include": [
    "src",
    "core",
    "mock/.ppd.client.configure.ts",
    "vite.config.ts"
  ]
}
